{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "globals": {
        "dataLayer": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 8,
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        },
        "sourceType": "module"
    },
    "rules": {
        "arrow-parens": [
            "warn",
            "as-needed"
        ],
        "comma-dangle": [
            "warn",
            "always-multiline"
        ],
        "eol-last": [
            "warn",
            "always"
        ],
        "eqeqeq": [
            "error",
            "always"
        ],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "key-spacing": [
            "warn",
            {
                "beforeColon": false,
                "afterColon": true,
                "mode": "strict"
            }
        ],
        "keyword-spacing": "warn",
        "no-multiple-empty-lines": [
            "warn",
            {
                "max": 1,
                "maxEOF": 1,
                "maxBOF": 0
            }
        ],
        "no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^_",
                "varsIgnorePattern": "^_"
            }
        ],
        "no-trailing-spaces": "warn",
        "no-var": "error",
        "object-curly-spacing": [
            "warn",
            "always"
        ],
        "prefer-const": "error",
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "never"
        ],
        "space-before-blocks": "warn",
        "template-curly-spacing": [
            "warn",
            "never"
        ]
    }
}