{
    "name": "tarpaulin-monorepo",
    "version": "1.0.0",
    "private": true,
    "packageManager": "pnpm@10.15.1+sha512.34e538c329b5553014ca8e8f4535997f96180a1d0f614339357449935350d924e22f8614682191264ec33d1462ac21561aff97f6bb18065351c162c7e8f6de67",
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "build": "pnpm --filter=tarpaulin run build",
        "dev": "pnpm --parallel dev",
        "lint": "pnpm lint:app && pnpm lint:package && eslint --fix",
        "check": "pnpm --parallel check",
        "lint:app": "pnpm --filter=tarpaulin-examples run lint",
        "lint:package": "pnpm --filter=tarpaulin run lint",
        "clean": "rimraf 'packages/*/{dist,node_modules}' && rimraf node_modules",
        "changeset": "changeset",
        "changeset:version": "changeset version && pnpm install --lockfile-only",
        "changeset:publish": "changeset publish",
        "changeset:snapshot": "changeset version --snapshot && changeset publish --tag snapshot",
        "release": "pnpm build && pnpm changeset:publish",
        "release:snapshot": "pnpm build && pnpm changeset:snapshot"
    },
    "devDependencies": {
        "@antfu/eslint-config": "^5.3.0",
        "@changesets/changelog-github": "^0.5.1",
        "@changesets/cli": "^2.29.7",
        "eslint": "^9.35.0",
        "eslint-plugin-format": "^1.0.1",
        "only-allow": "^1.2.1",
        "rimraf": "^6.0.1",
        "typescript": "^5.9.2"
    }
}
