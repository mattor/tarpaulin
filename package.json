{
    "name": "tarpaulin-monorepo",
    "version": "1.0.0",
    "private": true,
    "packageManager": "pnpm@10.15.1",
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "build": "pnpm --filter=tarpaulin run build",
        "start": "pnpm --filter=tarpaulin-examples run start",
        "test": "pnpm --filter=@tarpaulin/* run test",
        "lint": "pnpm --filter=@tarpaulin/* run lint",
        "clean": "rimraf 'packages/*/{dist,node_modules}' && rimraf node_modules",
        "changeset": "changeset",
        "version-packages": "changeset version",
        "release": "pnpm build && pnpm changeset publish"
    },
    "devDependencies": {
        "@antfu/eslint-config": "^5.2.2",
        "@changesets/cli": "^2.29.6",
        "eslint": "^9.34.0",
        "eslint-plugin-format": "^1.0.1",
        "only-allow": "^1.2.1",
        "rimraf": "^6.0.1",
        "typescript": "^5.9.2"
    }
}
